{
	"name": "ernilambar/foldyy",
	"description": "Folder tree viewer with size information - CLI tool to display folder structure with file and folder sizes.",
	"license": "MIT",
	"type": "library",
	"authors": [
		{
			"name": "Nilambar Sharma",
			"email": "nilambar@outlook.com",
			"homepage": "https://www.nilambar.net",
			"role": "Developer"
		}
	],
	"homepage": "https://github.com/ernilambar/foldyy",
	"support": {
		"issues": "https://github.com/ernilambar/foldyy/issues"
	},
	"require": {
		"php": ">=7.4",
		"symfony/console": "^5.4 || ^6.0 || ^7.0",
		"symfony/filesystem": "^5.4 || ^6.0 || ^7.0",
		"symfony/finder": "^5.4 || ^6.0 || ^7.0"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^1",
		"phpcompatibility/php-compatibility": "dev-develop#2b7b6e8f5d0ccae3bd41c25bcf1298884a5e1f62",
		"phpunit/phpunit": "^9.5 || ^10.0",
		"slevomat/coding-standard": "^8"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Nilambar\\Foldyy\\": "src"
		}
	},
	"bin": [
		"bin/foldyy"
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true
		},
		"platform": {
			"php": "7.4"
		},
		"sort-packages": true
	},
	"extra": {},
	"scripts": {
		"format": "vendor/bin/phpcbf",
		"lint": "@phpcs",
		"phpcs": "vendor/bin/phpcs",
		"phpunit": "vendor/bin/phpunit",
		"test": [
			"@lint",
			"@phpunit"
		]
	}
}
