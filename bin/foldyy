#!/usr/bin/env php
<?php
/**
 * Foldyy CLI Entry Point
 *
 * @package Foldyy
 */

if ( file_exists( __DIR__ . '/../vendor/autoload.php' ) ) {
	require_once __DIR__ . '/../vendor/autoload.php';
} elseif ( file_exists( __DIR__ . '/../../../autoload.php' ) ) {
	require_once __DIR__ . '/../../../autoload.php';
} else {
	fwrite( STDERR, 'Error: Composer autoload file not found. Please run "composer install".' . PHP_EOL );
	exit( 1 );
}

use Nilambar\Foldyy\Console\FoldyyCommand;
use Symfony\Component\Console\Application;

$application = new Application( 'Foldyy', '1.0.0' );
$application->add( new FoldyyCommand() );
$application->setDefaultCommand( 'foldyy', true );
$application->run();
